<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arshaan.a4.GameInterfaceActivity">

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Score: 0"
        android:textColor="#303F9F"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textState"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:text=""
        android:textColor="#FF4081"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/gameButton1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="1"
        />
    <Button
        android:id="@+id/gameButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="2"
        />
    <Button
        android:id="@+id/gameButton3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="3"
        />
    <Button
        android:id="@+id/gameButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="4"
        />
    <Button
        android:id="@+id/gameButton5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="5"
        />
    <Button
        android:id="@+id/gameButton6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="6"
        />
    <Button
        android:id="@+id/gamePlayAgainButton"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:text="Play Again?"
        android:textSize="25sp"
        android:textColor="#FF4081"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
